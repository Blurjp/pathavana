# Test Environment Configuration for Pathavana Backend

# Application
APP_NAME=Pathavana Travel Planning API - Test
VERSION=1.0.0-test
ENVIRONMENT=test
DEBUG=false
LOG_LEVEL=WARNING

# Server
HOST=0.0.0.0
PORT=8001
API_V1_STR=/api/v1

# Database - Use separate test database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/pathavana_test
DATABASE_ECHO=false

# Redis - Use separate Redis database
REDIS_URL=redis://localhost:6379/1
CACHE_TTL=60

# Security - Use test-specific keys
SECRET_KEY=test-secret-key-for-testing-only-not-secure
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_DAYS=1

# External APIs - Use mock services
AMADEUS_API_KEY=test_key
AMADEUS_API_SECRET=test_secret
OPENAI_API_KEY=test_openai_key
ANTHROPIC_API_KEY=test_anthropic_key

# Mock LLM responses for testing
LLM_PROVIDER=mock
LLM_MODEL=test-model
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=100
LLM_STREAMING_ENABLED=false

# Email - Use mock email service
SMTP_HOST=mock-smtp
SMTP_PORT=587
SMTP_USERNAME=test
SMTP_PASSWORD=test

# Frontend
FRONTEND_URL=http://localhost:3000

# Testing Features
ENABLE_METRICS=false
SEED_DATABASE=false
RATE_LIMIT_PER_MINUTE=10000

# File Paths
CACHE_DIR=test_cache
LOG_DIR=test_logs

# Test-specific settings
PYTEST_TIMEOUT=30
TEST_PARALLEL_WORKERS=4
MOCK_EXTERNAL_APIS=true