# Application Settings
APP_NAME="Pathavana Travel Planning API"
VERSION="1.0.0"
DEBUG=true
API_V1_STR="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# CORS Settings
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/pathavana"
DATABASE_ECHO=false

# Redis Configuration (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600

# Security Settings
SECRET_KEY="your-secret-key-change-in-production-use-openssl-rand-hex-32"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# OAuth Providers (obtain from respective provider consoles)
# Google OAuth 2.0
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# Microsoft OAuth
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# Email Configuration (SMTP)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@pathavana.com"
SMTP_FROM_NAME="Pathavana"
SMTP_TLS=true
SMTP_SSL=false

# Frontend URL (for email links and OAuth redirects)
FRONTEND_URL="http://localhost:3000"

# External API Keys
# Amadeus API (for flight/hotel search)
AMADEUS_API_KEY=""
AMADEUS_API_SECRET=""
AMADEUS_API_BASE_URL="https://api.amadeus.com"

# OpenAI Configuration
OPENAI_API_KEY=""

# Azure OpenAI Configuration (alternative to OpenAI)
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_ENDPOINT=""
AZURE_OPENAI_API_VERSION="2024-02-01"
AZURE_OPENAI_DEPLOYMENT_NAME=""

# Anthropic Configuration (alternative LLM)
ANTHROPIC_API_KEY=""

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=""

# LLM Configuration
LLM_PROVIDER="azure_openai"  # Options: azure_openai, openai, anthropic
LLM_MODEL="gpt-4"
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_STREAMING_ENABLED=true
LLM_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# File Paths
CACHE_DIR="cache"
LOG_DIR="logs"