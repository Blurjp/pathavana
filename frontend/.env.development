# Development Environment Configuration for Pathavana Frontend

# Application
REACT_APP_NAME=Pathavana
REACT_APP_VERSION=1.0.0-dev
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_BASE_URL=http://localhost:3000

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

# OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_MICROSOFT_CLIENT_ID=your_microsoft_client_id

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_ENABLE_HOTJAR=false
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PWA=false

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug
GENERATE_SOURCEMAP=true
ESLINT_NO_DEV_ERRORS=true

# Hot Reload
FAST_REFRESH=true
CHOKIDAR_USEPOLLING=true

# Build Settings
BUILD_PATH=build
PUBLIC_URL=/

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=false
REACT_APP_CACHE_STRATEGY=networkFirst

# Development Tools
REACT_APP_SHOW_DEV_TOOLS=true
REACT_APP_MOCK_API=false