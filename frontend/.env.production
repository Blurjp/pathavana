# Production Environment Configuration for Pathavana Frontend

# Application
REACT_APP_NAME=Pathavana
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# API Configuration
REACT_APP_API_URL=https://api.pathavana.com/api/v1
REACT_APP_WS_URL=wss://api.pathavana.com/ws
REACT_APP_BASE_URL=https://pathavana.com

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
REACT_APP_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
REACT_APP_FACEBOOK_APP_ID=${FACEBOOK_APP_ID}
REACT_APP_MICROSOFT_CLIENT_ID=${MICROSOFT_CLIENT_ID}

# Analytics and Tracking
REACT_APP_GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
REACT_APP_HOTJAR_ID=${HOTJAR_ID}
REACT_APP_SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_HOTJAR=true
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PWA=true

# Production Settings
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=error
GENERATE_SOURCEMAP=false

# Build Settings
BUILD_PATH=build
PUBLIC_URL=/
INLINE_RUNTIME_CHUNK=false

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_STRATEGY=cacheFirst

# Security
REACT_APP_CSP_REPORT_URI=https://pathavana.report-uri.com/r/d/csp/enforce

# Development Tools (disabled in production)
REACT_APP_SHOW_DEV_TOOLS=false
REACT_APP_MOCK_API=false